from signalfx.detectors.autodetect import utils
from signalfx.detectors.autodetect.infra.k8s import utils as k8s_utils


def statefulset_pods_not_at_spec_detector(fire_threshold: float = 0, fire_lasting: lasting = lasting('5m', 0.95),
                                          filter_: filter = None):
    # Detects when number of desired and current pods in statefulset have diverged
    # :param fire_threshold description=Specifies trigger threshold for desired minus current pods
    # :param fire_threshold label=Trigger threshold
    # :param fire_threshold min=0
    # :param fire_threshold round_to=0
    # :param fire_lasting specifies lasting object associated with fire threshold
    # :param fire_lasting label=Trigger sensitivity
    # :param filter_ description=Specifies dimensional scope of the detector
    # :param filter_ metric_name=k8s.statefulset.desired_pods
    # :return: detect block that triggers when statefulsets suitably filtered and grouped, are not at spec
    group_by = [k8s_utils.K8S_CLUSTER_NAME_DIM, k8s_utils.K8S_STATEFULSET_NAME_DIM, k8s_utils.K8S_NAMESPACE_NAME_DIM]

    desired_stream = data('k8s.statefulset.desired_pods', filter=filter_).sum(by=group_by, allow_missing=group_by)
    current_stream = data('k8s.statefulset.current_pods', filter=filter_).sum(by=group_by)
    stream = (desired_stream - current_stream)

    above_fire_threshold_stream = const(fire_threshold)
    below_fire_threshold_stream = const(0)

    ann = [utils.annotate_stream(stream, 'Desited - Current'),
           utils.annotate_fire_threshold(above_fire_threshold_stream, orientation='above'),
           utils.annotate_fire_threshold(below_fire_threshold_stream, label='below_0_threshold', orientation='out_of_band')]

    return detect(when((stream > above_fire_threshold_stream) or (stream < below_fire_threshold_stream), lasting=fire_lasting),
                  annotations=ann, auto_resolve_after=utils.AUTO_RESOLVE_AFTER)
